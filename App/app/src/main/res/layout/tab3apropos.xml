<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="net.synerghetic.synerg.MainActivity$PlaceholderFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1450dp">

        <TextView
            android:id="@+id/section_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Synerg'hetic : le 14ème mandat"
            android:textAppearance="@android:style/TextAppearance.Material.Title" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/section_label"
            android:layout_marginTop="17dp"
            android:lineSpacingExtra="8sp"
            android:text="Nous sommes les 11 nouveaux administrateurs représentant Synerg'hetic pour l'année 2017-2018."
            android:textAppearance="@android:style/TextAppearance.Material.Subhead"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView"
            android:layout_marginTop="11dp"
            android:lineSpacingExtra="8sp"
            android:text="Ensemble, nous rêvons de grandes choses pour notre Junior-Entreprise car son potentiel est énorme. "
            android:textAppearance="@android:style/TextAppearance.Material.Subhead"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView4"
            android:layout_marginTop="14dp"
            android:lineSpacingExtra="8sp"
            android:text="Treize mandats se sont succédé avec brio, ont réussi à faire évoluer la structure à une vitesse impressionnante et ont atteint en 2017 la prestigieuse finale du Prix d’Excellence, le prix qui récompense la meilleure Junior-Entreprise de France."
            android:textAppearance="@android:style/TextAppearance.Material.Subhead"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView5"
            android:lineSpacingExtra="8sp"
            android:text="C'est donc avec honneur que travaillons sans relache pour faire prospérer Synerg'hetic et l'emmener toujours plus loin."
            android:textAppearance="@android:style/TextAppearance.Material.Subhead"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quelques dates importantes"
            android:textAppearance="@android:style/TextAppearance.Material.Title"
            android:layout_below="@+id/textView6"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="22dp" />

        <ListView
            android:id="@+id/tab3_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:headerDividersEnabled="false"
            android:layout_below="@+id/textView7"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="19dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remerciements"
            android:textAppearance="@android:style/TextAppearance.Material.Title"
            android:layout_below="@+id/tab3_list"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="32dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:lineSpacingExtra="8sp"
            android:text="Cette aplication a été inspirée, pensée, imaginée et dévelopée par et pour les Enfants du Web."
            android:textAppearance="@android:style/TextAppearance.Material.Subhead"
            android:textSize="18sp"
            android:layout_below="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="8sp"
            android:text="Nous tenons à les remercier pour leur engagement et leur confiance qu'ils ont eu en leur J.E. depuis 2005"
            android:textAppearance="@android:style/TextAppearance.Material.Subhead"
            android:textSize="18sp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/textView3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/github_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView8"
            android:layout_marginTop="16dp"
            android:lineSpacingExtra="8sp"
            android:text="@string/github_link"
            android:textAppearance="@android:style/TextAppearance.Material.Subhead" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            android:layout_below="@+id/github_link"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/logo_violet" />

    </RelativeLayout>
    </LinearLayout>
</ScrollView>
